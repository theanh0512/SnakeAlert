<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/rattlesnake"
             tools:context="fyp.theanh.snakealertapplication.MainPageFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/captureButton"
        android:layout_marginTop="50dp"
        android:layout_gravity="left|top"
        android:src="@drawable/capture_icon"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/listOfSnakesButton"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/list_of_snakes_icon"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/mapButton"
        android:layout_gravity="right|top"
        android:src="@drawable/map_icon"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:id="@+id/helpButton"
        android:layout_gravity="right|center_vertical"
        android:src="@drawable/help_icon"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:id="@+id/firstaidButton"
        android:layout_gravity="left|center_vertical"
        android:src="@drawable/firstaid_icon"/>

</FrameLayout>
